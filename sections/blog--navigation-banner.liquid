        "en": "Navigation banner"
    },
    "class": "blog--navigation-banner",
    "settings": [
      {
        "type": "link_list",
        "id": "banner_linklist",
        "label": {
            "en": "Navigation",
            "de": "TRANSLATION_MISSING",
            "es": "TRANSLATION_MISSING",
            "fr": "TRANSLATION_MISSING",
            "pt-PT": "TRANSLATION_MISSING"
        },
        "default": "footer"
      },
      {
        "type": "color",
        "id": "nav_background_color",
        "label": {
            "en": "Background color",
            "de": "Hintergrundfarbe",
            "es": "Color de fondo",
            "fr": "Couleur de l'arri√®re plan",
            "pt-PT": "Cor de fundo"
        },
        "default": "#EEEEEE"
      },
      {
        "type": "radio",
        "id": "navigation_position",
        "label": {
          "en": "Navigation alignment"
        },
        "default": "center",
        "options": [
            {
              "value": "left",
              "label": {
                "en": "Left"
              }
            },
            {
              "value": "center",
              "label": {
                "en": "Center"
              }
            }
        ]
      }
    ],
    "presets": [
        {
            "name": {
                "en": "Navigation banner"
            },
            "category": {
                "en": "Text"
            }
        }
    ],
    "enabled_on": {
