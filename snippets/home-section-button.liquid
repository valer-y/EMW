{% if link != blank and label != blank %}
    <div class="action--button">
        <a
            class="homepage-section-btn"
            href="{{ link }}"
            data-section-main-link
            {% if label == blank %}
                aria-hidden="true"
            {% endif %}
        >
        {{ label }}
        </a>
    </div>
{% endif %}

<style>
    .action--button {
        position: relative;
        z-index: 1000;
    }
</style>