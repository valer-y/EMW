{
  "sections": {
    "product-form": {
      "type": "template--product",
      "blocks": {
        "media": {
          "type": "media",
          "settings": {
            "image_size": "medium",
            "image-display": "thumbnails",
            "thumbnail_position": "below",
            "enable_image_zoom": true,
            "enable_video_loop": false
          }
        },
        "sale_badge": {
          "type": "sale_badge",
          "settings": {
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "shipping_policy": true,
            "tax_included": false
          }
        },
        "options": {
          "type": "options",
          "settings": {
            "product_variant_style": "swatches",
            "thumbnail_changes_variant": false,
            "hide_soldout_variants": false
          }
        },
        "quantity": {
          "type": "quantity",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_smart_checkout": true
          }
        },
        "local_pickup": {
          "type": "local_pickup",
          "settings": {
          }
        },
        "trust_badges": {
          "type": "trust_badges",
          "settings": {
            "trust-badge_max_width": 220
          }
        }
      },
      "block_order": [
        "media",
        "sale_badge",
        "title",
        "price",
        "options",
        "quantity",
        "buy_buttons",
        "local_pickup",
        "trust_badges"
      ],
      "settings": {
        "enable_sticky": true,
        "show_out_of_stock_email": true
      }
    },
    "product-description": {
      "type": "template--product--description",
      "settings": {
        "enable_readmore": false
